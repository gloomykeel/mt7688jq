&pinctrl {
	state_default: pinctrl0 {
		uart2 {
			ralink,group = "gpio";
			ralink,function = "gpio";
		};

		gpio {
			ralink,group = "gpio";
			ralink,function = "gpio";
		};

		refclk {
			ralink,group = "refclk";
			ralink,function = "gpio";
		};

		i2s {
			ralink,group = "i2s";
			ralink,function = "gpio";
		};

		spis {
			ralink,group = "spis";
			ralink,function = "gpio";
		};

		pwm0 {
			ralink,group = "pwm0";
			ralink,function = "gpio";
		};

		pwm1 {
			ralink,group = "pwm1";
			ralink,function = "gpio";
		};

		wled_an {
			ralink,group = "wled_an";
			ralink,function = "gpio";
		};

		wdt {
			ralink,group = "wdt";
			ralink,function = "gpio";
		};

		p0led_an {
			ralink,group = "p0led_an";
			ralink,function = "p0led_an";
		};

		p1led_an {
			ralink,group = "p1led_an";
			ralink,function = "gpio";
		};

		p2led_an {
			ralink,group = "p2led_an";
			ralink,function = "gpio";
		};

		p3led_an {
			ralink,group = "p3led_an";
			ralink,function = "gpio";
		};

		p4led_an {
			ralink,group = "p4led_an";
			ralink,function = "gpio";
		};
	};

};

&spi0 {
	status = "okay";

	pinctrl-names = "default";
	pinctrl-0 = <&spi_pins>, <&spi_cs1_pins>;

	m25p80@0 {
		#address-cells = <1>;
		#size-cells = <1>;
		compatible = "jedec,spi-nor";
		reg = <0>;
		spi-max-frequency = <40000000>;
		m25p,chunked-io = <31>;

		partition@0 {
			label = "u-boot";
			reg = <0x0 0x30000>;
			read-only;
		};

		partition@30000 {
			label = "u-boot-env";
			reg = <0x30000 0x10000>;
		};

		factory: partition@40000 {
			label = "factory";
			reg = <0x40000 0x10000>;
			read-only;
		};

		partition@50000 {
			label = "firmware";
			reg = <0x50000 0x1fb0000>;
		};
	};
